<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Videos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-4" style="max-width: 900px;">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-1">Search</h2>
                <div class="text-muted small">
                    <strong>User </strong>
                    <p style="color: gray;">
                        Session userId: <%= user.id %>
                    </p>

                    <%= user.fullName %>
                        (<%= user.email %>)
                </div>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary" href="/">Home</a>
                <form method="POST" action="/logout" class="m-0">
                    <button class="btn btn-outline-danger" type="submit">Logout</button>
                </form>
            </div>
        </div>

        <!-- Error -->
        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>

                <!-- Search box -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <form class="d-flex gap-2" method="GET" action="/videos">
                            <input class="form-control" name="q" value="<%= q || '' %>" placeholder="type here" />
                            <button class="btn btn-primary" type="submit">Search</button>
                        </form>

                        <% if (q && (!results || results.length===0)) { %>
                            <div class="text-muted mt-3">No results found.</div>
                            <% } %>
                    </div>
                </div>

                <!-- Results -->
                <div id="results"></div>
                <% if (results && results.length> 0) { %>
                    <div class="row g-3 mb-5">
                        <% results.forEach(r=> { %>
                            <div class="col-md-6">
                                <div class="card h-100 shadow-sm">
                                    <img src="<%= r.thumbnailUrl %>" class="card-img-top" alt="thumb">
                                    <div class="card-body">
                                        <div class="fw-semibold mb-2">
                                            <%= r.title %>
                                        </div>

                                        <div class="d-flex gap-2">
                                            <a class="btn btn-outline-secondary btn-sm" target="_blank"
                                                href="https://www.youtube.com/watch?v=<%= r.videoId %>">
                                                Open
                                            </a>

                                            <form method="POST"
                                                action="/videos/favorites/add?<%= q ? ('q=' + encodeURIComponent(q)) : '' %>">
                                                <input type="hidden" name="videoId" value="<%= r.videoId %>">
                                                <input type="hidden" name="title" value="<%= r.title %>">
                                                <input type="hidden" name="thumbnailUrl" value="<%= r.thumbnailUrl %>">
                                                <button class="btn btn-success btn-sm" type="submit">Add to
                                                    favorites</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>

                        <!-- Favorites -->
                        <h4 class="mb-3">Favorites</h4>
                        <div id="favorites"></div>
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <% if (!favorites || favorites.length===0) { %>
                                    <div class="text-muted">empty</div>
                                    <% } else { %>
                                        <div class="list-group">
                                            <% favorites.forEach(f=> { %>
                                                <div
                                                    class="list-group-item d-flex align-items-center justify-content-between gap-3">
                                                    <div class="d-flex align-items-center gap-3">
                                                        <img src="<%= f.thumbnailUrl %>" alt="thumb"
                                                            style="width:120px; border-radius: 8px;">
                                                        <div>
                                                            <div class="fw-semibold">
                                                                <%= f.title %>
                                                            </div>
                                                            <a target="_blank"
                                                                href="https://www.youtube.com/watch?v=<%= f.videoId %>">Watch</a>
                                                        </div>
                                                    </div>

                                                    <form method="POST"
                                                        action="/videos/favorites/remove?<%= q ? ('q=' + encodeURIComponent(q)) : '' %>">
                                                        <input type="hidden" name="videoId" value="<%= f.videoId %>">
                                                        <button class="btn btn-outline-danger btn-sm"
                                                            type="submit">Remove</button>
                                                    </form>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
                            </div>
                        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>